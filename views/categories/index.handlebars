<h1 class='index'>Categories</h1>
<table class='table table-hover'>
  <tr>
    <th>Name</th>
    <th>Options</th>
  </tr>
  {{#each categories}}
  	<tr>
	    <td><a class='link-show-category' href="/categories/{{id}}">{{name}}</a></td>
	    <td>
	    	{{#if editable}}
	    		<ul class='list-inline'>
						<li><a class='link-edit-category' href="/categories/{{id}}/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></li>
						<li>
							<form method="POST" action="/categories/{{id}}" enctype="application/x-www-form-urlencoded">
							  <input type="hidden" name="_method" value="DELETE">
							  <button  type="submit" class="btn btn-link" aria-label="Left Align">
								  <span class="delete-category-button glyphicon glyphicon-remove" aria-hidden="true"></span>
								</button>
							</form>
						</li>
					</ul>
				{{/if}}
	    </td>
  	</tr>
 	{{/each}}
</table>

<a class='add-category-button btn btn-default pull-right' role="button" href="/categories/new"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
<h1 class='index'>Collections</h1>
<table class='table table-hover'>
  <tr>
    <th>Name</th>
    <th>Options</th>
  </tr>
  {{#each collections}}
  	<tr>
	    <td><a class='link-show-collection' href="/users/{{user_id}}/collections/{{id}}">{{name}}</a></td>
	    <td>
    		<ul class='list-inline'>
					<li><a class='link-edit-collection' href="/users/{{user_id}}/collections/{{id}}/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></li>
					<li>
						<form method="POST" action="/users/{{user_id}}/collections/{{id}}" enctype="application/x-www-form-urlencoded">
						  <input type="hidden" name="_method" value="DELETE">
						  <button  type="submit" class="btn btn-link" aria-label="Left Align">
							  <span class="delete-collection-button glyphicon glyphicon-remove" aria-hidden="true"></span>
							</button>
						</form>
					</li>
				</ul>
	    </td>
  	</tr>
 	{{/each}}
</table>

<a class='add-collection-button btn btn-default pull-right' role="button" href="/users/{{user_id}}/collections/new"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>